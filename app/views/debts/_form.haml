= form_for @debt do |f|
  - if debt.errors.any?
    #error_explanation
      %h2
        = pluralize(debt.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - debt.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :amount
    = f.text_field :amount, :autofocus => true

  .form-group
    = f.label :comment
    = f.text_area :comment

  .form-group
    = f.label :owner_id
    = f.collection_select(:owner_id, User.all, :id, :full_name)

  .form-group
    = f.label :payer_id
    = f.collection_select(:payer_id, User.all, :id, :full_name)

  .form-group
    = f.label :start_date
    = f.date_select :start_date

  .form-group
    = f.label :due_date
    = f.date_select :due_date


  - if @debt.persisted?
    .form-group
      = f.label :paid_date
      = f.date_select :paid_date

  = f.submit 'Submit'

