!!!
%html
  %head
    %title Oweright
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .page-container
      / top navbar
      %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        .navbar-header
          %button.navbar-toggle{"data-target" => ".sidebar-nav", "data-toggle" => "offcanvas", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'OWERIGHT', '/', :class => 'navbar-brand'


      .container-fluid
        .row.row-offcanvas.row-offcanvas-left
          = render :partial => 'shared/sidebar'
          / /main
          .col-xs-12.col-sm-9{"data-spy" => "scroll", "data-target" => "#sidebar-nav"}

            - flash.each do |type, msg|
              - type = type == 'alert' ? 'danger' : 'info'


              .alert.alert-dismissible{:role => "alert", :class => "alert-#{type}"}
                %button.close{'aria-label' => 'Close', 'data-dismiss' => 'alert', :type => 'button'}
                  %span{"aria-hidden" => "true"} Ã—
                = msg

            = yield

    = render :partial => 'shared/footer'


